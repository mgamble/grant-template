file = {:C\:/Users/matth/OneDrive/Documents/Mendeley Desktop/Zhang et al. - 2009 - Enzymes in the NAD salvage pathway regulate SIRT1 activity at target gene promoters - Journal of Biological Chemis.pdf:pdf},
issn = {00219258},
journal = {Journal of Biological Chemistry},
number = {30},
title = {{Enzymes in the NAD<sup>+</sup> salvage pathway regulate SIRT1 activity at target gene promoters}},
volume = {284},
year = {2009}
}
@article{Gamble2007,
