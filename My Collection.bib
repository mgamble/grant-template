file = {:C\:/Users/matth/OneDrive/Documents/Mendeley Desktop/Gamble et al. - 2005 - The Histone Chaperone TAF-I SET INHAT Is Required for Transcription In Vitro of Chromatin Templates - Society.pdf:pdf},
issn = {02707306},
journal = {Society},
number = {2},
pages = {797--807},
title = {{The Histone Chaperone TAF-I / SET / INHAT Is Required for Transcription In Vitro of Chromatin Templates}},
volume = {25},
year = {2005},
