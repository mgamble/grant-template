journal = {Society},
number = {2},
pages = {797--807},
title = {{The Histone Chaperone TAF-I / SET / INHAT Is Required for Transcription In Vitro of Chromatin Templates}},
volume = {25},
year = {2005}
}
@article{Krishnakumar2008,
