issn = {1545-9993},
journal = {Nature Structural and Molecular Biology},
number = {March},
publisher = {Springer US},
title = {{The macroH2A1.2 histone variant links ATRX loss to alternative telomere lengthening}},
url = {http://feeds.nature.com/$\sim$r/nsmb/rss/current/$\sim$3/3zPkq6zly3U/s41594-019-0192-3?utm_source=researcher_app&utm_medium=referral&utm_campaign=MKEF_USG_Researcher_inbound},
